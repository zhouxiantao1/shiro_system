<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.polly.dao.PermissionDao">
    
	<sql id="columns">
		id,
		permission,
		description,
		available
	</sql>
	
	<!-- 查询权限列表-->
	<select id="findList" resultType="com.example.polly.enty.Permission">
		SELECT
			<include refid="columns"/>
		FROM sys_permission
		<where>
			<if test="permission != null and permission !='' ">permission like '%' || #{permission} || '%'</if>
		</where>
	</select>
		
	<insert id="createPermission">
		INSERT INTO sys_permission(
			id,
			permission,
			description,
			available
		) VALUES (
			#{id},
			#{permission},
			#{description},
			#{available}
		)
	</insert>
   
   <delete id="deletePermission">
     delete from sys_permission
     <where>
          id = #{id}
       </where>
   </delete>
	
</mapper>